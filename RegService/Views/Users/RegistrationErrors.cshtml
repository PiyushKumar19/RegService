@model RegService.Models.UsersRegModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "RegistrationErrors";
}

<h1>RegistrationErrors</h1>

<div>
    <h4>UsersRegModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Errors)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Errors)
        </dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a asp-action="GetAllUsers" asp-controller="Users">Back to List</a>
    }
</div>
